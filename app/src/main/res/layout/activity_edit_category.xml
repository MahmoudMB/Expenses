<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context="com.example.mahmoudbahaa.expenses.EditCategory">



    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">


<ImageView
    android:id="@+id/EditCategory_Back"
    android:layout_weight="0.5"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_baseline_arrow_forward_ios_24px"
    android:background="@drawable/btnpress"
    />


        <LinearLayout
            android:id="@+id/EditCategory_Category"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/timeline_rounded_corner">

            <LinearLayout
                android:id="@+id/Add_OutCome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/timeline_rounded_corner"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Add_OutCome_Text"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="مصروفات"
                    android:textAlignment="center"
                    android:textColor="@color/white" />


            </LinearLayout>





            <LinearLayout
                android:id="@+id/Add_Income"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/timeline_rounded_corner"

                >

                <TextView
                    android:id="@+id/Add_Income_Text"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:text="ايرادات"
                    android:textAlignment="center"
                    android:textColor="@color/white"

                    />

            </LinearLayout>




        </LinearLayout>


        <ImageView
            android:id="@+id/EditCategory_AddNew"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24px"
            android:tint="@color/TimeLine_Acitve"
            android:background="@drawable/btnpress"
            />


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        android:id="@+id/CategoryEdit_OutComeRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>


    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        android:id="@+id/CategoryEdit_IncomeRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>





</LinearLayout>
