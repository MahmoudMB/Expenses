<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    android:background="@color/white"
    tools:context="com.mahmoudbahaa.wallet.SearchResults">

    <LinearLayout

        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="50dp"
        android:background="@color/white"
        android:id="@+id/AddActivity_FirstLayout">


        <ImageView
            android:id="@+id/EditCategory_Back"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24px"
            android:layout_gravity="center_vertical"

            android:tint="@color/BackArrow"
            android:background="@drawable/btnpress"
            />

        <LinearLayout
            android:id="@+id/Add_Category"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نتائج البحث"
                android:textSize="23sp"
                android:layout_gravity="center"
                android:tint="@color/BackArrow"
                />





        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="1dp"
            >

        </View>


    </LinearLayout>
    <View
        android:id="@+id/rsults_line"
        android:layout_below="@+id/AddActivity_FirstLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        ></View>


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/rsults_line"
        android:id="@+id/SearchResult_Recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/result_line1"
        >





    </android.support.v7.widget.RecyclerView>

    <View
        android:id="@+id/result_line1"
        android:layout_above="@+id/Resyults_Total"

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        ></View>


    <LinearLayout
        android:id="@+id/Resyults_Total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
android:layout_gravity="center"
    android:gravity="center"
    >

    <TextView
    android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مجموع الايرادات"
        android:layout_gravity="center"
        android:textAlignment="center"
        />


    <TextView
        android:id="@+id/Total_Income"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مجموع "
        android:textAlignment="center"
        android:textColor="@color/money_income"
        />


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center"
        >

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مجموع المصروفات"
            android:layout_gravity="center"
            android:textAlignment="center"
            />


        <TextView
            android:id="@+id/Total_OutCome"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مجموع "
            android:textAlignment="center"
            android:textColor="@color/money_expense"
            />


    </LinearLayout>
    </LinearLayout>


</RelativeLayout>
