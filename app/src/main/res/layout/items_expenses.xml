<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layoutDirection="rtl"
    android:textDirection="rtl"    android:padding="12dp"
    android:gravity="center"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/Expenses_Star"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
android:src="@drawable/ic_baseline_stars_24px"
        android:tint="@color/income"
        android:layout_marginEnd="10dp"

        />


    <LinearLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:orientation="vertical"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Expenses_Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ddd"
            android:textColor="#171717"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            />

        <TextView
            android:id="@+id/Expenses_Account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الحساب الاساسي"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#515151"

            />


    </LinearLayout>


    <TextView
        android:id="@+id/Expenses_Price"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
 android:textSize="17sp"
        android:textColor="@color/money_income"
        android:text="55555$"
        />


</LinearLayout>