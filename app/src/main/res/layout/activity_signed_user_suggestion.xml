<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textDirection="rtl"
    android:layoutDirection="rtl"
    android:fitsSystemWindows="true"

    tools:context="com.mahmoudbahaa.wallet.Addmemo">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp"
        android:background="#f0f0f0"
        >


        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="الغاء"
            android:textColor="@color/TimeLine_Acitve"
            android:textAlignment="center"
            android:id="@+id/Contact_Cancel"


            />

        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="اتصل بنا"
            android:textColor="#000000"
            android:textAlignment="center"

            />


        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="ارسال"
            android:textColor="@color/TimeLine_Acitve"
            android:textAlignment="center"
            android:id="@+id/AddMemo_Done"
            android:visibility="invisible"

            />


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey">

    </View>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/Contact_Msg"

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="الرسالة"
        android:gravity="top|right"
        android:inputType="textMultiLine|text|textNoSuggestions"
        android:layout_margin="10dp"

        />


    <Button

        android:id="@+id/Contact_Send"
        android:layout_width="220dp"
        android:elevation="4dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="ارسال"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:background="@drawable/login_corner_active"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/Contact_Msg"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>

</ScrollView>

</LinearLayout>
