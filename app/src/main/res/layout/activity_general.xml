<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context="com.mahmoudbahaa.wallet.GeneralActivity">



    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="50dp">


        <ImageView
            android:id="@+id/AccountEdit_back"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24px"
            android:background="@drawable/btnpress"
android:tint="@color/BackArrow"
            />


        <TextView

            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="عام"
            android:textSize="23sp"
            android:textAlignment="center"
            android:tint="@color/BackArrow"

            >


</TextView>

        <View
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"></View>

    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/grey"
    ></View>


    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



<LinearLayout
    android:id="@+id/General_Account"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:gravity="center"
    android:background="@drawable/btn_press_settings"
    android:layout_height="wrap_content">

    <TextView
        android:padding="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
android:layout_gravity="center"
        android:text="الحساب الافتراضي"
        android:textSize="18sp"

        />


    <TextView
        android:id="@+id/General_AccountText"
        android:padding="5dp"

        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="الحساب الافتراضي"
        android:textSize="18sp"

        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24px"
        android:layout_weight="0.1"
        android:tint="@color/grey"
        />


</LinearLayout>


<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/grey"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    ></View>


        <LinearLayout
            android:id="@+id/General_CategoryOutcome"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:background="@drawable/btn_press_settings"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="الفئة الافتراضية للمصروفات"
                android:textSize="18sp"

                />


            <TextView
                android:padding="5dp"
android:id="@+id/General_CategoryOutcomeText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="اخرى1"
                android:textSize="18sp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24px"
                android:layout_weight="0.2"
                android:tint="@color/grey"
                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            ></View>


        <LinearLayout
            android:id="@+id/General_CategoryIncome"
            android:layout_width="match_parent"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:gravity="center"
            android:background="@drawable/btn_press_settings"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="الفئة الافتراضية للايرادات"
                android:textSize="18sp"

                />


            <TextView
                android:padding="5dp"
                android:id="@+id/General_CategoryIncomeText"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="اخرى"
                android:textSize="18sp"

                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24px"
                android:layout_weight="0.2"
                android:tint="@color/grey"
                />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            ></View>


    </LinearLayout>



</LinearLayout>
