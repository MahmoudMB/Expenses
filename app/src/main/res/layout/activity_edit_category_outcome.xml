<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    tools:context="com.mahmoudbahaa.wallet.EditCategory">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="55dp"
        android:background="@color/white"
        android:id="@+id/AddActivity_FirstLayout">


        <ImageView
            android:id="@+id/EditCategory_Back"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_forward_ios_24px"
            android:layout_gravity="center_vertical"

            android:tint="@color/BackArrow"
            android:background="@drawable/btnpress"
            />

        <LinearLayout
            android:id="@+id/Add_Category"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فئات المصروفات"
                android:textSize="27sp"
                android:layout_gravity="center"
                android:tint="@color/BackArrow"
                />






        </LinearLayout>

        <ImageView
            android:id="@+id/EditCategory_AddNew"
            android:layout_weight="0.6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_add_24px"
            android:layout_gravity="center_vertical"
            android:tint="@color/BackArrow"
            android:background="@drawable/btnpress"
            />


    </LinearLayout>








    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"

        android:id="@+id/CategoryEdit_OutComeRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>





</LinearLayout>
