<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="com.example.mahmoudbahaa.expenses.StatisticsFragment">


    <LinearLayout
        android:id="@+id/Statistics_AccountSpinner"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content"

        >


        <TextView
            android:id="@+id/Statistics_CurrentAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="جميع الحسابات"
            android:textSize="19sp"
            />

        <ImageView
            android:id="@+id/Statistics_AccountArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24px"
           android:padding="6dp"
            android:tag="false"
            />

    </LinearLayout>



