<LinearLayout

    android:layout_marginTop="14dp"
    android:background="@color/white"
    android:layout_below="@+id/Statistics_AccountSpinner"
    android:id="@+id/ShowLastLayout"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="عرض اخر "
        android:layout_marginStart="20dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="20sp"
        />

    <LinearLayout
        android:id="@+id/Statistics_TimeLine"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/timeline_rounded_corner">

        <LinearLayout
            android:id="@+id/Statistics_TimeLine_days"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timeline_rounded_corner"
android:backgroundTint="@color/TimeLine_Acitve"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Statistics_TimeLine_days_Text"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="7 ايام"
                android:textAlignment="center"
                android:textColor="@color/white" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/Statistics_TimeLine_month"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timeline_rounded_corner"
            >

            <TextView
                android:id="@+id/Statistics_TimeLine_month_Text"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="شهر"
                android:textAlignment="center"
                android:textColor="@color/TimeLineInActive"

                />

        </LinearLayout>




        <LinearLayout
            android:id="@+id/Statistics_TimeLine_6months"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timeline_rounded_corner"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/Statistics_TimeLine_6months_Text"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="6 اشهر"
                android:textAlignment="center"
                android:textColor="@color/TimeLineInActive"

                />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/Statistics_TimeLine_year"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/timeline_rounded_corner">

            <TextView
                android:id="@+id/Statistics_TimeLine_year_Text"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:text="سنة"
                android:textAlignment="center"
                android:textColor="@color/TimeLineInActive"

                />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>



    <RelativeLayout
        android:background="@color/white"
    android:layout_below="@+id/ShowLastLayout"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/Statistics_NoData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="لا يوجد بيانات لعرضها "
            android:textSize="30sp"
            android:layout_centerInParent="true"

            />


    <com.github.mikephil.charting.charts.PieChart
        android:layout_marginTop="8dp"

        android:id="@+id/Statistics_PieChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    </com.github.mikephil.charting.charts.PieChart>




</RelativeLayout>


</RelativeLayout>
