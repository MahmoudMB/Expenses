<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:context="com.mahmoudbahaa.wallet.SettingsFragment">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"
            android:layout_height="50dp">




            <TextView

                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:text="الاعدادت"
                android:textSize="23sp"
                android:textAlignment="center"
                android:tint="@color/BackArrow"

                >


            </TextView>




        </LinearLayout>
        <View
            android:layout_below="@+id/Statistics_AccountSpinner"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            ></View>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/white"
            android:id="@+id/Settings_OnlineData"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/Settings_EmailText"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mahmoud.nx@gmail.com"
            android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/black"

                />


            <TextView
                android:id="@+id/Settings_SyncDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Sync: 2019-1-17"
                android:textAlignment="center"

                />



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:src="@drawable/ic_baseline_sync_24px"
                    android:tint="@color/TimeLine_Acitve"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="مزامنة"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:textColor="#171717"
                    />


                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/Settings_SyncSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    />

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"

            android:layout_height="45dp">
        <LinearLayout
            android:id="@+id/Settings_General"
            android:background="@drawable/btnpress"


            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"

            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_bookmark_24px"
                android:tint="@color/TimeLine_Acitve"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="عام"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="#171717"
                />


            <ImageView
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24px"
                android:layout_gravity="center"
                android:tint="@color/grey"
                />

        </LinearLayout>

        </LinearLayout>


         <LinearLayout
             android:id="@+id/Settings_EditCategory"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:background="@drawable/btnpress"


            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_category_24px"
                android:tint="@color/TimeLine_Acitve"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="التصنيفات"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="#171717"
                />


           <ImageView
               android:layout_weight="0.3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_baseline_arrow_back_ios_24px"
               android:layout_gravity="center"
               android:tint="@color/grey"
               />

        </LinearLayout>

    </LinearLayout>


         <LinearLayout
             android:id="@+id/Settings_EditAccount"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:background="@drawable/btnpress"

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_account_24"
                android:tint="@color/TimeLine_Acitve"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="الحسابات"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="#171717"
                />


            <ImageView
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24px"
                android:layout_gravity="center"
                android:tint="@color/grey"
                />

        </LinearLayout>
    </LinearLayout>





    <LinearLayout
        android:id="@+id/Settings_Contact"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <LinearLayout
            android:background="@drawable/btnpress"

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_contact_support_24px"
                android:tint="@color/TimeLine_Acitve"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="اتصل بنا"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="#171717"
                />


            <ImageView
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24px"
                android:layout_gravity="center"
                android:tint="@color/grey"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:id="@+id/Settings_About"
        android:layout_height="45dp">
        <LinearLayout
            android:background="@drawable/btnpress"

            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:src="@drawable/ic_baseline_info_24px"
                android:tint="@color/TimeLine_Acitve"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="حول"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="#171717"
                />


            <ImageView
                android:layout_weight="0.3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_ios_24px"
                android:layout_gravity="center"
                android:tint="@color/grey"
                />

        </LinearLayout>
    </LinearLayout>




        <TextView
            android:id="@+id/Settings_Logout"
            android:textColor="#ff4828"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="تسجيل الخروج"
            android:background="@drawable/btnpress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            />

</LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
